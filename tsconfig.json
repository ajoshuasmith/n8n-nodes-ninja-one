{
	"compilerOptions": {
		"strict": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es2022",
		"lib": ["es2022"],
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"outDir": "./dist",
		"rootDir": "."
	},
	"include": [
		"credentials/**/*.ts",
		"nodes/**/*.ts",
		"index.ts"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
